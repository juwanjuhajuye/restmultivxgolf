<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tablesalemainactivity"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_weight="15"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:background="#8993AC"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:layout_toLeftOf="@+id/table_main_refresh_btn_ln"
                android:background="@color/zxing_transparent"
                android:id="@+id/table_main_back_logo"
                android:scaleType="centerInside"
                android:layout_margin="10dp"
                android:layout_width="150dp"
                android:layout_height="100dp"/>

            <LinearLayout
                android:id="@+id/table_main_apsolute_view_ln"
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/table_main_apsolute_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"></FrameLayout>

            </LinearLayout>
            <Button
                android:background="@drawable/aa_images_main_fcmenu_tt_bt_rollover_side"

                android:textColor="#ffffff"
                android:textAlignment="center"
                android:textSize="50dp"
                android:id="@+id/table_main_btn_side_showup"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="60dp"
                android:layout_height="100dp"/>

            <LinearLayout
                android:id="@+id/table_main_refresh_btn_ln"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_marginTop="10dp"
                    android:id="@+id/table_main_refresh_btn"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:background="#00000000"
                    android:src="@drawable/button_selector_table_refresh"
                    android:layout_marginRight="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageButton
                android:layout_marginRight="40dp"
                android:id="@+id/table_main_btn_side_close"
                android:layout_alignBottom="@+id/table_main_refresh_btn_ln"
                android:layout_toLeftOf="@+id/table_main_refresh_btn_ln"
                android:layout_above="@+id/table_main_side_scrollview"
                android:background="@color/zxing_transparent"
                android:src="@drawable/ab_imagebutton_tablesale_side_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/table_layout_emp_view"
                android:layout_marginRight="150dp"
                android:layout_toLeftOf="@+id/table_main_btn_side_close"
                android:layout_width="0dp"
                android:layout_height="0dp"/>


            <ScrollView
                android:id="@+id/table_main_side_scrollview"
                android:visibility="gone"
                android:layout_below="@+id/table_main_refresh_btn_ln"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/table_main_btn_side1"
                        android:text="BILL\nPRINT"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/table_main_imagebutton_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/table_main_btn_side2"
                        android:text="BILL SPLIT\n/ MERGE\n/ PRINT"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/table_main_imagebutton_mid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:visibility="gone"
                        android:id="@+id/table_main_btn_side3"
                        android:text="KITCHEN\nRE-PRINT"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/table_main_imagebutton_mid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <!--                    <Button-->
                    <!--                        android:id="@+id/table_main_btn_side4"-->
                    <!--                        android:text="BILL MERGE"-->
                    <!--                        android:textColor="#ffffff"-->
                    <!--                        android:textSize="20dp"-->
                    <!--                        android:layout_marginTop="2dp"-->
                    <!--                        android:background="@drawable/table_main_imagebutton_mid"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"/>-->
                    <Button
                        android:id="@+id/table_main_btn_side5"
                        android:text="DETAIL\nINFO"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/table_main_imagebutton_mid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/table_main_btn_side6"
                        android:text="MOVE\nTABLE"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/table_main_imagebutton_mid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/table_main_btn_side10"
                        android:text="TABLE\nSPLIT"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/table_main_imagebutton_mid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/table_main_btn_side8"
                        android:text="TABLE\nMERGE"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/table_main_imagebutton_mid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <!-- 08092023 -->
                    <Button
                        android:id="@+id/table_main_btn_side13"
                        android:text="TABLE\nCOMBINE"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/table_main_imagebutton_mid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"/>


                    <Button
                        android:id="@+id/table_main_btn_side9"
                        android:text="TABLE\nCLEAR"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/table_main_imagebutton_mid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/table_main_btn_side12"
                        android:text="BELL\nSTOP"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/table_main_imagebutton_bot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:visibility="gone"
                        android:id="@+id/table_main_btn_side7"
                        android:text="ALL\nINIT."
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/table_main_imagebutton_mid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.example.jjbfather.jjjqsrt2go2gorestkakaovx.OutlineTextView
                        android:visibility="gone"
                        android:id="@+id/table_main_btn_side11"
                        app:textStroke="true"
                        app:textStrokeColor="@color/colorWhite"
                        app:textStrokeWidth="5.0"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="QUICK\nSALE"
                        android:textColor="#fc2f18"
                        android:textSize="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/table_main_imagebutton_bot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </ScrollView>


<!--            <LinearLayout-->
<!--                android:id="@+id/table_main_side_view"-->
<!--                android:layout_alignParentRight="true"-->
<!--                android:orientation="vertical"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent">-->
<!--            </LinearLayout>-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/table_main_btn_side_showup_quick_table_recyclerview_ln"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_width="50dp"
                android:layout_height="80dp">
                <com.example.jjbfather.jjjqsrt2go2gorestkakaovx.VerticalTextView

                    android:id="@+id/table_main_btn_side_showup_quick_table_recyclerview"
                    android:background="#2e3442"
                    android:textSize="20dp"
                    android:text="QUICK"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:textColor="#e1c05f"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:visibility="gone"-->
<!--                android:layout_toRightOf="@+id/table_main_btn_side_showup_quick_table_recyclerview_ln"-->
<!--                android:layout_toLeftOf="@+id/table_main_side_scrollview"-->
<!--                android:id="@+id/table_main_quick_table_recyclerview"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:scrollbars="horizontal"-->
<!--                android:background="#dde1ec"-->
<!--                android:layout_alignParentBottom="true"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content">-->

<!--            </androidx.recyclerview.widget.RecyclerView>-->


            <RelativeLayout
                android:id="@+id/table_main_grid_relative_view"
                android:horizontalSpacing="5dp"
                android:verticalSpacing="5dp"
                android:layout_marginTop="100dp"
                android:visibility="gone"
                android:layout_toLeftOf="@+id/table_layout_emp_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:numColumns="3"
                    android:horizontalSpacing="5dp"
                    android:verticalSpacing="5dp"
                    android:id="@+id/table_main_quick_table_gridview"
                    android:visibility="visible"
                    android:background="#dde1ec"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/table_main_grid_relative_view_loading"
                    android:background="#aaffffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:text="Loading.."
                        android:textSize="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </RelativeLayout>





        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#232531"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:background="#32323c"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/table_main_checklist"
                android:background="@drawable/button_selector_tablemain_checklist"
                android:text=""
                android:textSize="26dp"
                android:textColor="#147df1"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/table_main_close_btn"
                android:background="@drawable/button_selector_tablemain_command"
                android:text="  "
                android:textSize="26dp"
                android:textStyle="bold"

                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <Button
                android:text=""
                android:id="@+id/quick_table_order_callin_btn"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:textSize="26dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/button_selector_tablemain_togo_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <Button
                android:text=""
                android:id="@+id/quick_table_order_btn"
                android:layout_marginRight="5dp"
                android:textSize="26dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/button_selector_tablemain_togo_walkin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <Button
                android:text=""
                android:id="@+id/quick_table_popup_btn"
                android:layout_marginRight="15dp"
                android:textSize="26dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/button_selector_tablemain_togo_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:background="#2f3443"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/floorLn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="horizontal">

                    <!--
                    <Button
                        android:id="@+id/table_main_bottom_floor_btn1"
                        android:text="MAIN HALL"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:background="@drawable/ab_imagebutton_table_main_bottom_button"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    -->

                </LinearLayout>


                <ImageButton
                    android:visibility="gone"
                    android:id="@+id/tableorderbtn"
                    android:background="@android:color/transparent"
                    android:src="@drawable/table_main_imagebutton_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>


</LinearLayout>