<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <LinearLayout
        android:id="@+id/saleHistoryTipAdjustmentLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/roundlayout" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" >
                <TextView
                    android:id="@+id/saleHistoryTipAdjustmentTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="TIP ADJUSTMENT"
                    android:textSize="16dp"
                    android:paddingLeft="10dp"
                    android:textColor="#3e3d42" />

                <Button
                    android:id="@+id/saleHistoryTipAdjustmentCloseBtn"
                    android:tag="saleHistoryTipAdjustmentCloseBtnTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text=" X "/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" ></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bbbbc8" ></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" ></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8.5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/saleHistoryTipAdjustmentSubTitleTextView5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="left|center_vertical"
                            android:textSize="14dp"
                            android:textColor="#3e3d42"
                            android:text="ORDER #"/>
                        <TextView
                            android:id="@+id/saleHistoryTipAdjustmentOrderNoTextView"
                            android:tag="saleHistoryTipAdjustmentOrderNoTextViewTag"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:background="#f0f0f0"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="8dp"
                            android:paddingRight="5dp"
                            android:textSize="14dp"
                            android:textColor="#3e3d42"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/saleHistoryTipAdjustmentSubTitleTextView1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="left|center_vertical"
                            android:textSize="14dp"
                            android:textColor="#3e3d42"
                            android:text="RECEIPT #"/>
                        <TextView
                            android:id="@+id/saleHistoryTipAdjustmentSalesCodeTextView"
                            android:tag="saleHistoryTipAdjustmentSalesCodeTextViewTag"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:background="#f0f0f0"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="8dp"
                            android:paddingRight="5dp"
                            android:textSize="14dp"
                            android:textColor="#3e3d42"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/saleHistoryTipAdjustmentSubTitleTextView2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="left|center_vertical"
                            android:textSize="14dp"
                            android:textColor="#3e3d42"
                            android:text="EMPLOYEE"/>
                        <TextView
                            android:id="@+id/saleHistoryTipAdjustmentEmployeeTextView"
                            android:tag="saleHistoryTipAdjustmentEmployeeTextViewTag"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:background="#f0f0f0"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:gravity="center_vertical|left"
                            android:textSize="14dp"
                            android:textColor="#3e3d42"/>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:id="@+id/saleHistoryTipAdjustmentPayTypeRadioGroup"
                            android:tag="saleHistoryTipAdjustmentPayTypeRadioGroupTag"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/saleHistoryTipAdjustmentCashRadioButton"
                                android:tag="saleHistoryTipAdjustmentCashRadioButtonTag"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15dp"
                                android:textColor="#3e3d42"
                                android:text="CASH" />

                            <RadioButton
                                android:id="@+id/saleHistoryTipAdjustmentCardRadioButton"
                                android:tag="saleHistoryTipAdjustmentCardRadioButtonTag"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:textSize="15dp"
                                android:textColor="#3e3d42"
                                android:text="CARD" />

                        </RadioGroup>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/saleHistoryTipAdjustmentSubTitleTextView3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="left|center_vertical"
                            android:textStyle="bold"
                            android:textColor="#3e3d42"
                            android:text="TIP AMOUNT"/>
                        <EditText
                            android:id="@+id/saleHistoryTipAdjustmentTipAmountEditText"
                            android:tag="saleHistoryTipAdjustmentTipAmountEditTextTag"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:background="#f0f0f0"
                            android:gravity="center"
                            android:textSize="18dp"
                            android:inputType="none"
                            android:enabled="false"
                            android:textStyle="bold"
                            android:textColor="#3e3d42"
                            android:cursorVisible="false" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/saleHistoryTipAdjustmentSubTitleTextView4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="left|center_vertical"
                            android:textColor="#3e3d42"
                            android:textStyle="bold"
                            android:text="TIP TOTAL"/>
                        <TextView
                            android:id="@+id/saleHistoryTipAdjustmentTotalTipAmountEditText"
                            android:tag="saleHistoryTipAdjustmentTotalTipAmountEditTextTag"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:background="#f0f0f0"
                            android:gravity="center"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="#3e3d42"
                            android:cursorVisible="false" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/saleHistoryTipAdjustmentSubTitleTextView6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="left|center_vertical"
                            android:textColor="#3e3d42"
                            android:textStyle="bold"
                            android:text="TOTAL (+TIP)" />
                        <TextView
                            android:id="@+id/saleHistoryTipTotalTotalTipAmountEditText"
                            android:tag="saleHistoryTipTotalTotalTipAmountEditTextTag"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:background="#f0f0f0"
                            android:gravity="center"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="#3e3d42"
                            android:cursorVisible="false" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:gravity="center"
                            android:textColor="#a4a2a9"/>
                        <TextView
                            android:id="@+id/saleHistoryTipAdjustmentCardImageTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:textColor="#a4a2a9"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:gravity="center"
                            android:textColor="#a4a2a9"/>
                        <TextView
                            android:id="@+id/saleHistoryTipAdjustmentCardNumberTextView"
                            android:tag="saleHistoryTipAdjustmentCardNumberTextViewTag"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="#a4a2a9"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:orientation="horizontal">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:stretchColumns="*">
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1" >
                                <Button
                                    android:id="@+id/saleHistoryTipAdjustmentSuButton7"
                                    android:tag="saleHistoryTipAdjustmentSuButtonTag7"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/roundlayout_numberbutton"
                                    android:layout_margin="3dp"
                                    android:text="7"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:textColor="#5b5b5b"/>
                                <Button
                                    android:id="@+id/saleHistoryTipAdjustmentSuButton8"
                                    android:tag="saleHistoryTipAdjustmentSuButtonTag8"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/roundlayout_numberbutton"
                                    android:layout_margin="3dp"
                                    android:text="8"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:textColor="#5b5b5b"/>
                                <Button
                                    android:id="@+id/saleHistoryTipAdjustmentSuButton9"
                                    android:tag="saleHistoryTipAdjustmentSuButtonTag9"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/roundlayout_numberbutton"
                                    android:layout_margin="3dp"
                                    android:text="9"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:textColor="#5b5b5b"/>
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1" >
                                <Button
                                    android:id="@+id/saleHistoryTipAdjustmentSuButton4"
                                    android:tag="saleHistoryTipAdjustmentSuButtonTag4"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/roundlayout_numberbutton"
                                    android:layout_margin="3dp"
                                    android:text="4"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:textColor="#5b5b5b"/>
                                <Button
                                    android:id="@+id/saleHistoryTipAdjustmentSuButton5"
                                    android:tag="saleHistoryTipAdjustmentSuButtonTag5"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/roundlayout_numberbutton"
                                    android:layout_margin="3dp"
                                    android:text="5"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:textColor="#5b5b5b"/>
                                <Button
                                    android:id="@+id/saleHistoryTipAdjustmentSuButton6"
                                    android:tag="saleHistoryTipAdjustmentSuButtonTag6"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/roundlayout_numberbutton"
                                    android:layout_margin="3dp"
                                    android:text="6"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:textColor="#5b5b5b"/>
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1" >
                                <Button
                                    android:id="@+id/saleHistoryTipAdjustmentSuButton1"
                                    android:tag="saleHistoryTipAdjustmentSuButtonTag1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/roundlayout_numberbutton"
                                    android:layout_margin="3dp"
                                    android:text="1"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:textColor="#5b5b5b"/>
                                <Button
                                    android:id="@+id/saleHistoryTipAdjustmentSuButton2"
                                    android:tag="saleHistoryTipAdjustmentSuButtonTag2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/roundlayout_numberbutton"
                                    android:layout_margin="3dp"
                                    android:text="2"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:textColor="#5b5b5b"/>
                                <Button
                                    android:id="@+id/saleHistoryTipAdjustmentSuButton3"
                                    android:tag="saleHistoryTipAdjustmentSuButtonTag3"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/roundlayout_numberbutton"
                                    android:layout_margin="3dp"
                                    android:text="3"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:textColor="#5b5b5b"/>
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1" >
                                <Button
                                    android:id="@+id/saleHistoryTipAdjustmentSuButton0"
                                    android:tag="saleHistoryTipAdjustmentSuButtonTag0"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/roundlayout_numberbutton"
                                    android:layout_margin="3dp"
                                    android:text="0"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:textColor="#5b5b5b"/>
                                <Button
                                    android:id="@+id/saleHistoryTipAdjustmentSuButton00"
                                    android:tag="saleHistoryTipAdjustmentSuButtonTag00"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/roundlayout_numberbutton"
                                    android:layout_margin="3dp"
                                    android:text="00"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:textColor="#5b5b5b"/>
                                <Button
                                    android:id="@+id/saleHistoryTipAdjustmentSuButtonBack"
                                    android:tag="saleHistoryTipAdjustmentSuButtonTagBack"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/roundlayout_numberbutton"
                                    android:layout_margin="3dp"
                                    android:text="â†"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    android:textColor="#5b5b5b"/>
                            </TableRow>
                        </TableLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.8"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/saleHistoryTipAdjustmentSuButtonV"
                            android:tag="saleHistoryTipAdjustmentSuButtonTagV"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/roundlayout_numberbutton_v"
                            android:layout_margin="3dp"
                            android:text="V"
                            android:textSize="35dp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
