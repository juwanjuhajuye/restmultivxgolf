<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:background="@android:color/transparent" >

    <LinearLayout
        android:id="@+id/table_main_table_split_ln"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/table_main_round_avtivity"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:background="@drawable/table_main_round_avtivity"

                    android:id="@+id/table_main_billsplit_ln"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:id="@+id/saleHistoryLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="0dp"

                        android:visibility="visible">

                        <RelativeLayout
                            android:background="@drawable/table_main_popup_top"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginBottom="10dp"
                            android:paddingRight="10dp" >
                            <TextView
                                android:id="@+id/table_main_popup_top"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="20dp"
                                android:paddingRight="10dp"
                                android:text="Detail Information"
                                android:textSize="30dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff" />

                            <ImageButton
                                android:layout_margin="10dp"
                                android:id="@+id/table_main_bill_split_close"
                                android:tag="saleHistoryCloseBtnTag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/aa_images_main_close_x"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:gravity="center"/>
                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/table_detail_info_list_main"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="8.5"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/infotitle1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|right"
                                    android:paddingRight="5dp"
                                    android:textColor="#000000"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    android:text="Table"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.1"/>
                                <TextView
                                    android:id="@+id/table_info_name"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5"
                                    android:gravity="center_vertical|left"
                                    android:paddingLeft="5dp"
                                    android:textColor="#000000"
                                    android:textSize="16dp"
                                    android:text="table name"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.3"/>

                                <TextView
                                    android:id="@+id/infotitle2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5"
                                    android:gravity="center_vertical|right"
                                    android:paddingRight="5dp"
                                    android:textColor="#000000"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    android:text="Capacity"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.1"/>
                                <TextView
                                    android:id="@+id/table_info_capacity"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|left"
                                    android:paddingLeft="5dp"
                                    android:textColor="#000000"
                                    android:textSize="16dp"
                                    android:text="0"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.3"/>

                                <TextView
                                    android:id="@+id/infotitle3"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|right"
                                    android:paddingRight="5dp"
                                    android:textColor="#000000"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    android:text="Total"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.1"/>
                                <TextView
                                    android:id="@+id/table_info_menu_total"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5"
                                    android:gravity="center_vertical|left"
                                    android:paddingLeft="5dp"
                                    android:textColor="#000000"
                                    android:textSize="16dp"
                                    android:text="0"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal|top"
                                    android:textSize="12dp"
                                    android:text="--------------------------------------------------------------------------"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/infotitle4"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|right"
                                    android:paddingRight="5dp"
                                    android:textColor="#000000"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    android:text="Date In"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.1"/>
                                <TextView
                                    android:id="@+id/dateintv"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5"
                                    android:gravity="center_vertical|left"
                                    android:paddingLeft="5dp"
                                    android:textColor="#000000"
                                    android:textSize="16dp"
                                    android:text="table name"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.1"/>


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical|right"
                                    android:padding="10dp">

                                    <TextView
                                        android:id="@+id/etcinfotv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical|right"
                                        android:padding="5dp"
                                        android:textColor="#000000"
                                        android:textSize="16dp"
                                        android:text="etc info"/>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.1"
                                android:orientation="horizontal">
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.1"
                                android:orientation="horizontal">
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="10"
                                android:orientation="vertical"
                                android:paddingBottom="10dp">

                                <LinearLayout
                                    android:background="@drawable/roundlayout_black_line_white"
                                    android:layout_weight="10"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp">
                                    <LinearLayout
                                        android:layout_margin="5dp"
                                        android:background="#d9d9e8"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1.1">
                                        <TextView
                                            android:id="@+id/titleTv1"
                                            android:gravity="center"
                                            android:textStyle="bold"
                                            android:text="Ordered Items"
                                            android:textColor="#000000"
                                            android:textSize="20dp"
                                            android:layout_weight="5"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"/>
                                        <TextView
                                            android:id="@+id/titleTv2"
                                            android:gravity="center"
                                            android:textStyle="bold"
                                            android:text="Qty"
                                            android:textColor="#000000"
                                            android:textSize="20dp"
                                            android:layout_weight="1"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"/>
                                        <TextView
                                            android:id="@+id/titleTv3"
                                            android:gravity="center"
                                            android:text="Bill"
                                            android:textColor="#000000"
                                            android:textStyle="bold"
                                            android:textSize="20dp"
                                            android:layout_weight="1"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:visibility="gone"/>
                                        <TextView
                                            android:id="@+id/titleTv4"
                                            android:gravity="center"
                                            android:textStyle="bold"
                                            android:text="Server"
                                            android:textColor="#000000"
                                            android:textSize="20dp"
                                            android:layout_weight="1"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"/>
                                    </LinearLayout>
                                    <ListView
                                        android:id="@+id/table_main_split_item_list"
                                        android:layout_margin="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="10"/>
                                </LinearLayout>

                                <LinearLayout

                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.2"
                                    android:layout_margin="10dp">

                                    <Button
                                        android:visibility="gone"
                                        android:id="@+id/alldeletebtn"
                                        android:background="@drawable/table_main_button_black1"
                                        android:textSize="24dp"
                                        android:text="All Delete"
                                        android:textColor="#ffffff"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2" />

                                    <TextView
                                        android:visibility="gone"
                                        android:layout_weight="0.3"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"/>

                                    <Button
                                        android:visibility="gone"
                                        android:id="@+id/selecteddeletebtn"
                                        android:background="@drawable/table_main_button_black1"
                                        android:textSize="24dp"
                                        android:text="Selected Delete"
                                        android:textColor="#ffffff"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="5" />
                                    <Button
                                        android:id="@+id/detailinfo_print"
                                        android:background="@drawable/table_main_button_black1"
                                        android:textSize="24dp"
                                        android:text="Print"
                                        android:textColor="#ffffff"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="5" />

                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <!-- 중앙 컨텐츠 끝 -->


            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal">
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
        </LinearLayout>

    </LinearLayout>



</LinearLayout>