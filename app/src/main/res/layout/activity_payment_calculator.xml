<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:background="@android:color/transparent" >

    <LinearLayout
        android:id="@+id/realtimewebordersLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.03"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:gravity="center">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:gravity="center"
                android:background="@drawable/roundlayout_background_paymentcashpad">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/paycaltempTv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textColor="#3e3d42"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:text="Split Calculator" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.2"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <TextView
                                android:id="@+id/cashAmountEv"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:textSize="24dp"
                                android:textStyle="bold"
                                android:textColor="#3e3d42"
                                android:inputType="number"
                                android:maxLength="16"
                                android:gravity="center_horizontal|center_vertical"
                                android:background="@drawable/roundlayout_splitcalculator_tv" />

                            <Button
                                android:id="@+id/clearBtn"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/button_selector_cashinout_button_cashin"
                                android:layout_marginLeft="10dp"
                                android:text="CLEAR"
                                android:textSize="14dp"
                                android:textColor="#0054d5"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/paycaltempTv2"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="1/1"
                                    android:textSize="12dp"
                                    android:textColor="#3e3d42" />

                                <TextView
                                    android:id="@+id/splitTv1"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:textSize="18dp"
                                    android:textColor="#3e3d42"
                                    android:textStyle="bold"
                                    android:background="@drawable/roundlayout_splitcalculator_tv"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/paycaltempTv5"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="1/4"
                                    android:textSize="12dp"
                                    android:textColor="#3e3d42" />

                                <TextView
                                    android:id="@+id/splitTv4"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:textSize="18dp"
                                    android:textColor="#3e3d42"
                                    android:textStyle="bold"
                                    android:background="@drawable/roundlayout_splitcalculator_tv"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:orientation="vertical" >

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/paycaltempTv3"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="1/2"
                                    android:textSize="12dp"
                                    android:textColor="#3e3d42" />

                                <TextView
                                    android:id="@+id/splitTv2"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:textSize="18dp"
                                    android:textColor="#3e3d42"
                                    android:textStyle="bold"
                                    android:background="@drawable/roundlayout_splitcalculator_tv"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/paycaltempTv6"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="1/5"
                                    android:textSize="12dp"
                                    android:textColor="#3e3d42" />

                                <TextView
                                    android:id="@+id/splitTv5"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:textSize="18dp"
                                    android:textColor="#3e3d42"
                                    android:textStyle="bold"
                                    android:background="@drawable/roundlayout_splitcalculator_tv"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:orientation="vertical" >

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/paycaltempTv4"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="1/3"
                                    android:textSize="12dp"
                                    android:textColor="#3e3d42" />

                                <TextView
                                    android:id="@+id/splitTv3"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:textSize="18dp"
                                    android:textColor="#3e3d42"
                                    android:textStyle="bold"
                                    android:background="@drawable/roundlayout_splitcalculator_tv"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/paycaltempTv7"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="1/6"
                                    android:textSize="12dp"
                                    android:textColor="#3e3d42" />

                                <TextView
                                    android:id="@+id/splitTv6"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:textSize="18dp"
                                    android:textColor="#3e3d42"
                                    android:textStyle="bold"
                                    android:background="@drawable/roundlayout_splitcalculator_tv"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="7"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/giftCardBalanceCheckKeypadLn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal"
                                android:visibility="visible" >

                                <TableLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="7dp"
                                    android:stretchColumns="*">

                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1" >
                                        <Button
                                            android:id="@+id/cashEnter_suButton7"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@drawable/button_selector_numberbutton_qty"
                                            android:layout_margin="3dp"
                                            android:text="7"
                                            android:textSize="18dp"
                                            android:textStyle="bold"
                                            android:textColor="#ffffff"/>
                                        <Button
                                            android:id="@+id/cashEnter_suButton8"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@drawable/button_selector_numberbutton_qty"
                                            android:layout_margin="3dp"
                                            android:text="8"
                                            android:textSize="18dp"
                                            android:textStyle="bold"
                                            android:textColor="#ffffff"/>
                                        <Button
                                            android:id="@+id/cashEnter_suButton9"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@drawable/button_selector_numberbutton_qty"
                                            android:layout_margin="3dp"
                                            android:text="9"
                                            android:textSize="18dp"
                                            android:textStyle="bold"
                                            android:textColor="#ffffff"/>
                                    </TableRow>
                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1" >
                                        <Button
                                            android:id="@+id/cashEnter_suButton4"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@drawable/button_selector_numberbutton_qty"
                                            android:layout_margin="3dp"
                                            android:text="4"
                                            android:textSize="18dp"
                                            android:textStyle="bold"
                                            android:textColor="#ffffff"/>
                                        <Button
                                            android:id="@+id/cashEnter_suButton5"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@drawable/button_selector_numberbutton_qty"
                                            android:layout_margin="3dp"
                                            android:text="5"
                                            android:textSize="18dp"
                                            android:textStyle="bold"
                                            android:textColor="#ffffff"/>
                                        <Button
                                            android:id="@+id/cashEnter_suButton6"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@drawable/button_selector_numberbutton_qty"
                                            android:layout_margin="3dp"
                                            android:text="6"
                                            android:textSize="18dp"
                                            android:textStyle="bold"
                                            android:textColor="#ffffff"/>
                                    </TableRow>
                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1" >
                                        <Button
                                            android:id="@+id/cashEnter_suButton1"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@drawable/button_selector_numberbutton_qty"
                                            android:layout_margin="3dp"
                                            android:text="1"
                                            android:textSize="18dp"
                                            android:textStyle="bold"
                                            android:textColor="#ffffff"/>
                                        <Button
                                            android:id="@+id/cashEnter_suButton2"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@drawable/button_selector_numberbutton_qty"
                                            android:layout_margin="3dp"
                                            android:text="2"
                                            android:textSize="18dp"
                                            android:textStyle="bold"
                                            android:textColor="#ffffff"/>
                                        <Button
                                            android:id="@+id/cashEnter_suButton3"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@drawable/button_selector_numberbutton_qty"
                                            android:layout_margin="3dp"
                                            android:text="3"
                                            android:textSize="18dp"
                                            android:textStyle="bold"
                                            android:textColor="#ffffff"/>
                                    </TableRow>
                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1" >
                                        <Button
                                            android:id="@+id/cashEnter_suButton0"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@drawable/button_selector_numberbutton_qty"
                                            android:layout_margin="3dp"
                                            android:text="0"
                                            android:textSize="18dp"
                                            android:textStyle="bold"
                                            android:textColor="#ffffff"/>
                                        <Button
                                            android:id="@+id/cashEnter_suButtonBack"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@drawable/button_selector_numberbutton_qty"
                                            android:layout_margin="3dp"
                                            android:text="â†"
                                            android:textSize="18dp"
                                            android:textStyle="bold"
                                            android:textColor="#ffffff"/>
                                        <Button
                                            android:id="@+id/cashEnter_suButtonX"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@drawable/button_selector_numberbutton"
                                            android:layout_margin="3dp"
                                            android:text="CLOSE"
                                            android:textSize="12dp"
                                            android:textColor="#5b5b5b"/>

                                    </TableRow>

                                </TableLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:gravity="center">

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.03"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emptyLinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="horizontal">
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
