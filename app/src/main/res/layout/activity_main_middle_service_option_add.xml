<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <LinearLayout
        android:id="@+id/optionaddPopupLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/roundlayout_pushpopup_reservation" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:gravity="left|center_vertical">

            <LinearLayout
                android:id="@+id/optionaddPopupServiceNameLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:padding="3dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:gravity="left|center_vertical">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/optionaddPopupServiceImageView"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id="@+id/optionaddPopupServiceNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="5dp"
                        android:text="Luxury Manicure"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:textColor="#3e3d42"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="right|center_vertical">

                    <Button
                        android:id="@+id/viewallbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ab_imagebutton_viewall" />

                    <Button
                        android:id="@+id/hideallbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ab_imagebutton_hideall" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:background="#bbbbc8"></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/pricetextview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical|right"
                                android:paddingRight="10dp"
                                android:textStyle="bold"
                                android:textColor="#3a8cde"
                                android:textSize="22dp"
                                android:text="Price"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.2"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/optionaddPopupPriceTextView"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center_vertical|right"
                                android:paddingRight="10dp"
                                android:textColor="#000000"
                                android:textSize="24dp"
                                android:text="$0.00"
                                android:background="@drawable/roundlayout_optiontitle5"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/amounttextview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical|right"
                                android:paddingRight="10dp"
                                android:textStyle="bold"
                                android:textColor="#3a8cde"
                                android:textSize="22dp"
                                android:text="Amount"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="8"
                            android:orientation="vertical"
                            android:background="@drawable/roundlayout_optiontitle5" >
                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="4"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/optionaddPopupTxtTextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textMultiLine"
                                    android:gravity="center_vertical|left"
                                    android:padding="2dp"
                                    android:textColor="#000000"
                                    android:textSize="20dp"
                                    android:text="" />

                            </ScrollView>

                            <TextView
                                android:id="@+id/optionaddPopupAmountTextView"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|right"
                                android:paddingRight="10dp"
                                android:textColor="#000000"
                                android:textSize="32dp"
                                android:text="$0.00"
                                android:textStyle="bold"/>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:paddingLeft="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="10"
                            android:orientation="horizontal">

                            <ScrollView
                                android:id="@+id/optionaddPopupOAListScrollView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp">
                                <LinearLayout
                                    android:id="@+id/optionaddPopupOAListLinearLayout"
                                    android:tag="optionaddPopupOAListLinearLayoutTag"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                </LinearLayout>
                            </ScrollView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/optionaddPopupVButton"
                                android:tag="optionaddPopupVButtonTag"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4.5"
                                android:gravity="center"
                                android:background="@drawable/button_selector_numberbutton_qty_v"
                                android:textSize="20dp"
                                android:textColor="#f70926"
                                android:text="V"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"/>

                            <Button
                                android:id="@+id/optionaddPopupCloseButton"
                                android:tag="optionaddPopupCloseButtonTag"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:textColor="#f70926"
                                android:text="X"/>

                        </LinearLayout>




                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2">
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</LinearLayout>
