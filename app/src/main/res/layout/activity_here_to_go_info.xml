<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <LinearLayout
        android:id="@+id/customerAddLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/roundlayout_deliverytakeawaybg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_margin="7dp"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/saleHistoryTopTitleTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="HERE / TO GO INFORMATION"
                    android:textSize="18dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3" />

                <Button
                    android:id="@+id/hereToGoSubmitButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button_selector_numberbutton_qty_v"
                    android:layout_marginRight="10dp"
                    android:text="V"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#83444D" />

                <Button
                    android:id="@+id/hereToGoInfoCloseBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:layout_marginBottom="5dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:gravity="center"
                    android:background="@drawable/button_selector_gray"
                    android:textColor="#ffffff"
                    android:text="X"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:orientation="horizontal"
                android:padding="3dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <!-- Left Start -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:padding="3dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" >




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >
                        <TextView
                            android:id="@+id/customerIdTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:textSize="16dp"
                            android:text="Phone No. *"
                            android:paddingLeft="10dp"
                            android:gravity="left|center_vertical"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.07" />

                        <EditText
                            android:id="@+id/customerIdEditText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:textSize="16dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:hint="Phone# (No dashes or space)"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/roundlayout_background_customeraddet_rq"/>

                        <Button
                            android:visibility="visible"
                            android:id="@+id/customerWalkInButotn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:inputType="number"
                            android:textSize="16dp"
                            android:layout_marginLeft="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="WALK IN"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/button_selector_category7"/>

                        <Button
                            android:id="@+id/onlinebtn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:inputType="number"
                            android:textSize="16dp"
                            android:layout_marginLeft="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="ONLINE"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/button_selector_category4"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >
                        <TextView
                            android:id="@+id/customerNameTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:textSize="16dp"
                            android:text="Name *"
                            android:paddingLeft="10dp"
                            android:gravity="left|center_vertical"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.07" />
                        <EditText
                            android:id="@+id/customerNameEditText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="First Name"
                            android:textSize="16dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/roundlayout_background_customeraddet"/>
                        <EditText
                            android:id="@+id/customerNameEditText2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="Last Name"
                            android:textSize="16dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/roundlayout_background_customeraddet"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >
                        <TextView
                            android:id="@+id/customerMemoTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:textSize="16dp"
                            android:text="Note"
                            android:paddingLeft="10dp"
                            android:gravity="left|center_vertical"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.07" />

                        <EditText
                            android:id="@+id/customerMemoEditText"
                            android:tag="customerMemoEditTextTag"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="left|top"
                            android:singleLine="false"
                            android:lines="3"
                            android:background="@drawable/roundlayout_background_custmemo"
                            android:textSize="16dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:scrollbars="vertical"
                            android:textColor="#3f3e3a"
                            android:text=""/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >
                        <TextView
                            android:id="@+id/customerDeliveryDayTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:textSize="16dp"
                            android:text="To Go Fee"
                            android:paddingLeft="10dp"
                            android:gravity="left|center_vertical"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.07" />
                        <TextView
                            android:id="@+id/customerToGoFeeTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:textSize="16dp"
                            android:textColor="#ffffff"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="left|center_vertical"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >

                        <TextView
                            android:id="@+id/customerDeliveryTakeawayTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:gravity="left|center_vertical"/>

                    </LinearLayout>



                </LinearLayout>



                <!-- Left End -->


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
