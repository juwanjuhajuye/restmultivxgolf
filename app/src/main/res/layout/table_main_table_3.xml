<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView1"
            android:src="@drawable/table_main_button_table3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/table_main_table_image"
            android:src="@drawable/ic_tables_circle"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/main_table_row_title"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:text="Table 01"
            android:lines="1"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/table_main_table_image"
            android:layout_alignRight="@+id/imageView1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/table_main_bill_count"
            android:text="Bill  A  B  C  D"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/main_table_row_title"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/table_main_total_order_txt"
            android:text="TOTAL ORDERS"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/table_main_bill_count"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/table_main_table_totalprice"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/table_main_total_order_txt"
            android:layout_marginTop="10dp"
            android:textColor="#f6531a"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="$350.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>