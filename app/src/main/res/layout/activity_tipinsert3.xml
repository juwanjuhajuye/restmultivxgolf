<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/tipinsertLn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        android:background="@drawable/roundlayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:gravity="left|bottom"
                    android:text="Tip : "
                    android:textColor="#ffffff"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tipInsertTv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="9dp"
                    android:gravity="center_vertical|right"
                    android:textSize="34dp"
                    android:textStyle="bold"
                    android:textColor="#3e3d42"
                    android:text="0.0"
                    android:padding="10dp"
                    android:background="@drawable/roundlayout_background_tipinsert" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/tipinsertkeypadKeypadLn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:visibility="visible" >

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="7dp"
                        android:stretchColumns="*">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" >
                            <Button
                                android:id="@+id/tipinsertkeypad_suButton7"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="7"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <Button
                                android:id="@+id/tipinsertkeypad_suButton8"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="8"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <Button
                                android:id="@+id/tipinsertkeypad_suButton9"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="9"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" >
                            <Button
                                android:id="@+id/tipinsertkeypad_suButton4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="4"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <Button
                                android:id="@+id/tipinsertkeypad_suButton5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="5"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <Button
                                android:id="@+id/tipinsertkeypad_suButton6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="6"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" >
                            <Button
                                android:id="@+id/tipinsertkeypad_suButton1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="1"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <Button
                                android:id="@+id/tipinsertkeypad_suButton2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="2"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <Button
                                android:id="@+id/tipinsertkeypad_suButton3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="3"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" >
                            <Button
                                android:id="@+id/tipinsertkeypad_suButton0"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="0"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <Button
                                android:id="@+id/tipinsertkeypad_suButton00"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="00"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <Button
                                android:id="@+id/tipinsertkeypad_suButtonBack"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="←"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" >
                            <Button
                                android:id="@+id/tipinsertkeypad_suButtonV"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_selector_numberbutton_qty_v"
                                android:layout_margin="3dp"
                                android:text="V"
                                android:textSize="22dp"
                                android:textStyle="bold"
                                android:textColor="#83444D"
                                android:layout_span="3" />

                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="horizontal">
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
        </LinearLayout>

    </LinearLayout>

</LinearLayout>