<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/loglist_row_main"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/loglist_row_stcode"
                android:gravity="center_vertical"
                android:text="K12312412"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/loglist_row_salescode"
                android:gravity="center_vertical"
                android:text="K12312412"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/loglist_row_date"
                android:gravity="center_vertical"
                android:text="2022-10-05 99:99:99"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/loglist_row_empname"
                android:text="1"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/loglist_row_btnname"
                android:text="A"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/loglist_row_btntext"
                android:text="A"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>