<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/mainSaleCartListLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.03"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0"/>

            <TextView
                android:id="@+id/mainSaleCartListCategoryColor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0"/>

        </LinearLayout>
        <TextView
            android:id="@+id/mainSaleCartListTaxExempt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center" />

        <TextView
            android:id="@+id/mainSaleCartListEmp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.03"
            android:gravity="center"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/mainSaleCartListMenuName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical|left" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="Qty."
                    android:textSize="14dp"
                    android:textColor="#a4a2a9"/>

                <TextView
                    android:id="@+id/mainSaleCartListQty"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical|left" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/mainSaleCartListEach"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/mainSaleCartListCheckBox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainSaleCartListLinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/mainSaleCartListCategoryColor2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.03"
            android:gravity="center" />
        <TextView
            android:id="@+id/mainSaleCartListOptionAdditionalTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:padding="5dp"
            android:gravity="center"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/mainSaleCartListEach2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>