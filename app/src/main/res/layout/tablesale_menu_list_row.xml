<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/tablesale_menulist_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/tablesale_menulist_checkbox"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ab_images_table_splitmerge_checkbox"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:background="#000000"
            android:layout_toRightOf="@+id/tablesale_menulist_checkbox"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tablesale_menulist_checkbox"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tablesale_menulist_menuname"
                android:gravity="center_vertical"
                android:text="Ice Cream"
                android:textSize="22dp"
                android:textColor="#000000"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:background="#000000"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tablesale_menulist_price"
                android:text="1"
                android:gravity="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>

