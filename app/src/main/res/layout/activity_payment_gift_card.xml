<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <LinearLayout
        android:id="@+id/paymentGiftCardPopupLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/roundlayout" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/discountExtraTitleEditText"
                    android:tag="discountExtraTitleEditTextTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3e3d42"
                    android:textSize="16dp"
                    android:text="Payment Gift Card"/>

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp" >

                <Button
                    android:id="@+id/paymentGiftCardPopupCloseBtn"
                    android:tag="paymentGiftCardPopupCloseBtnTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:background="#bbbbc8"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/temppgcTv1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="left|center_vertical"
                        android:textColor="#3e3d42"
                        android:textSize="14dp"
                        android:text="Amount"/>
                    <TextView
                        android:id="@+id/paymentGiftCardPopupEditTextAmount"
                        android:tag="paymentGiftCardPopupEditTextAmountTag"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:gravity="center_vertical|right"
                        android:paddingRight="10dp"
                        android:textSize="20dp"
                        android:textColor="#3e3d42"
                        android:background="@drawable/roundlayout_background_paymentgiftcard"
                        android:cursorVisible="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <TextView
                        android:id="@+id/temppgcTv2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="left|center_vertical"
                        android:textColor="#3e3d42"
                        android:textSize="14dp"
                        android:text="Card #"/>
                    <EditText
                        android:id="@+id/paymentGiftCardPopupEditTextCardNumber"
                        android:tag="paymentGiftCardPopupEditTextCardNumberTag"
                        android:foregroundGravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="20dp"
                        android:textColor="#3e3d42"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:focusable="true"
                        android:background="@drawable/roundlayout_background_paymentgiftcard2"
                        android:gravity="center" />
                    <Button
                        android:id="@+id/paymentGiftCardPopupButtonSearch"
                        android:tag="paymentGiftCardPopupButtonSearchTag"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.47"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/button_selector_payment_giftcard_search"
                        android:textSize="12dp"
                        android:textColor="#ffffff"
                        android:text="SEARCH"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/temppgcTv3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="left|center_vertical"
                        android:textColor="#3e3d42"
                        android:textSize="14dp"
                        android:text="Use"/>
                    <EditText
                        android:id="@+id/paymentGiftCardPopupEditTextUse"
                        android:tag="paymentGiftCardPopupEditTextUseTag"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:gravity="center_vertical|right"
                        android:paddingRight="10dp"
                        android:textSize="20dp"
                        android:textColor="#3e3d42"
                        android:textStyle="bold"
                        android:background="@drawable/roundlayout_background_paymentgiftcard2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/temppgcTv4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="left|center_vertical"
                        android:textColor="#3e3d42"
                        android:textSize="14dp"
                        android:text="Remaining"/>
                    <TextView
                        android:id="@+id/paymentGiftCardPopupEditTextRemaining"
                        android:tag="paymentGiftCardPopupEditTextRemainingTag"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:gravity="center_vertical|right"
                        android:paddingRight="10dp"
                        android:textSize="20dp"
                        android:textColor="#3e3d42"
                        android:background="@drawable/roundlayout_background_paymentgiftcard"
                        android:cursorVisible="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/temppgcTv5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="left|center_vertical"
                        android:textColor="#3e3d42"
                        android:textSize="14dp"
                        android:text="Remaining After Paid"/>
                    <TextView
                        android:id="@+id/paymentGiftCardPopupEditTextRemainingAfterPaid"
                        android:tag="paymentGiftCardPopupEditTextRemainingAfterPaidTag"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:gravity="center_vertical|right"
                        android:paddingRight="10dp"
                        android:textSize="20dp"
                        android:textColor="#3e3d42"
                        android:background="@drawable/roundlayout_background_paymentgiftcard"
                        android:cursorVisible="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:paddingTop="25dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stretchColumns="*">
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" >
                            <Button
                                android:id="@+id/paymentGiftCardPopupSuButton7"
                                android:tag="paymentGiftCardPopupSuButtonTag7"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="7"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <Button
                                android:id="@+id/paymentGiftCardPopupSuButton8"
                                android:tag="paymentGiftCardPopupSuButtonTag8"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="8"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <Button
                                android:id="@+id/paymentGiftCardPopupSuButton9"
                                android:tag="paymentGiftCardPopupSuButtonTag9"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="9"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" >
                            <Button
                                android:id="@+id/paymentGiftCardPopupSuButton4"
                                android:tag="paymentGiftCardPopupSuButtonTag4"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="4"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <Button
                                android:id="@+id/paymentGiftCardPopupSuButton5"
                                android:tag="paymentGiftCardPopupSuButtonTag5"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="5"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <Button
                                android:id="@+id/paymentGiftCardPopupSuButton6"
                                android:tag="paymentGiftCardPopupSuButtonTag6"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="6"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" >
                            <Button
                                android:id="@+id/paymentGiftCardPopupSuButton1"
                                android:tag="paymentGiftCardPopupSuButtonTag1"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="1"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <Button
                                android:id="@+id/paymentGiftCardPopupSuButton2"
                                android:tag="paymentGiftCardPopupSuButtonTag2"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="2"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <Button
                                android:id="@+id/paymentGiftCardPopupSuButton3"
                                android:tag="paymentGiftCardPopupSuButtonTag3"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="3"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" >
                            <Button
                                android:id="@+id/paymentGiftCardPopupSuButton0"
                                android:tag="paymentGiftCardPopupSuButtonTag0"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="0"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <Button
                                android:id="@+id/paymentGiftCardPopupSuButton00"
                                android:tag="paymentGiftCardPopupSuButtonTag00"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="00"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <Button
                                android:id="@+id/paymentGiftCardPopupSuButtonBack"
                                android:tag="paymentGiftCardPopupSuButtonTagBack"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_selector_numberbutton_qty"
                                android:layout_margin="3dp"
                                android:text="â†"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                        </TableRow>
                    </TableLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.8"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/paymentGiftCardPopupSuButtonV"
                        android:tag="paymentGiftCardPopupSuButtonTagV"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_numberbutton_qty_v"
                        android:layout_margin="3dp"
                        android:text="V"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        android:textColor="#83444D"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
