<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/table_main_billprint_list_txt1"
            android:textColor="#000000"
            android:textSize="24dp"
            android:background="#c0c1c6"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Bill - A"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
        <TextView
            android:id="@+id/totalamounttv"
            android:layout_below="@+id/table_main_billprint_list_txt1"
            android:textColor="#000000"
            android:textSize="26dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:gravity="center"
            android:text="$ 352.29"
            android:layout_width="match_parent"
            android:layout_height="70dp"/>
        <ImageView
            android:id="@+id/table_main_billprint_list_check_img"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/aa_images_main_selected_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>