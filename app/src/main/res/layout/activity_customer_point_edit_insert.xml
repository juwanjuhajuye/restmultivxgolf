<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/customerPointEditKeypadLn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:visibility="visible" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >
                <Button
                    android:id="@+id/customerPointEdit_suButton7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_numberbutton_qty"
                    android:layout_margin="3dp"
                    android:text="7"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>
                <Button
                    android:id="@+id/customerPointEdit_suButton8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_numberbutton_qty"
                    android:layout_margin="3dp"
                    android:text="8"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>
                <Button
                    android:id="@+id/customerPointEdit_suButton9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_numberbutton_qty"
                    android:layout_margin="3dp"
                    android:text="9"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >
                <Button
                    android:id="@+id/customerPointEdit_suButton4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_numberbutton_qty"
                    android:layout_margin="3dp"
                    android:text="4"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>
                <Button
                    android:id="@+id/customerPointEdit_suButton5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_numberbutton_qty"
                    android:layout_margin="3dp"
                    android:text="5"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>
                <Button
                    android:id="@+id/customerPointEdit_suButton6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_numberbutton_qty"
                    android:layout_margin="3dp"
                    android:text="6"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >
                <Button
                    android:id="@+id/customerPointEdit_suButton1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_numberbutton_qty"
                    android:layout_margin="3dp"
                    android:text="1"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>
                <Button
                    android:id="@+id/customerPointEdit_suButton2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_numberbutton_qty"
                    android:layout_margin="3dp"
                    android:text="2"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>
                <Button
                    android:id="@+id/customerPointEdit_suButton3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_numberbutton_qty"
                    android:layout_margin="3dp"
                    android:text="3"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >
                <Button
                    android:id="@+id/customerPointEdit_suButton0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_numberbutton_qty"
                    android:layout_margin="3dp"
                    android:text="0"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>
                <Button
                    android:id="@+id/customerPointEdit_suButton00"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_numberbutton_qty"
                    android:layout_margin="3dp"
                    android:text="00"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>
                <Button
                    android:id="@+id/customerPointEdit_suButtonBack"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_numberbutton_qty"
                    android:layout_margin="3dp"
                    android:text="←"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4" >

                <Button
                    android:id="@+id/customerPointEdit_historyButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:layout_margin="3dp"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#f7f24d" />

                <Button
                    android:id="@+id/customerPointEdit_suButtonV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_margin="3dp"
                    android:layout_span="3"/>

                <Button
                    android:id="@+id/customerPointEdit_suButtonX"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="3dp" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>