<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <LinearLayout
        android:id="@+id/customerAddLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/roundlayout" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_margin="7dp"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp">
                <TextView
                    android:id="@+id/saleHistoryTopTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Customer Information"
                    android:textSize="18dp"
                    android:textColor="#3e3d42" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/hereToGoInfoCloseBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:background="#bbbbc8" ></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:orientation="horizontal"
                android:padding="3dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <!-- Left Start -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:padding="3dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >
                        <TextView
                            android:id="@+id/customerIdTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#3e3d42"
                            android:textSize="16dp"
                            android:text="ID *"
                            android:paddingLeft="10dp"
                            android:gravity="left|center_vertical"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.07" />

                        <EditText
                            android:id="@+id/customerIdEditText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:inputType="number"
                            android:textSize="16dp"
                            android:hint="Phone# (No dashes or space)"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/roundlayout_background_customeraddet_rq"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >
                        <TextView
                            android:id="@+id/customerNameTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#3e3d42"
                            android:textSize="16dp"
                            android:text="Name *"
                            android:paddingLeft="10dp"
                            android:gravity="left|center_vertical"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.07" />
                        <EditText
                            android:id="@+id/customerNameEditText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="First Name"
                            android:textSize="16dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/roundlayout_background_customeraddet_rq"/>
                        <EditText
                            android:id="@+id/customerNameEditText2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="Last Name"
                            android:textSize="16dp"
                            android:layout_marginLeft="3dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/roundlayout_background_customeraddet_rq"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >
                        <TextView
                            android:id="@+id/customerPasswordTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#3e3d42"
                            android:textSize="16dp"
                            android:text="Password"
                            android:paddingLeft="10dp"
                            android:gravity="left|center_vertical"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.07" />
                        <EditText
                            android:id="@+id/customerPasswordEditText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:textSize="16dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/roundlayout_background_customeraddet"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >
                        <TextView
                            android:id="@+id/customerGenderTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#3e3d42"
                            android:textSize="16dp"
                            android:text="Phone #"
                            android:paddingLeft="10dp"
                            android:gravity="left|center_vertical"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.07" />
                        <EditText
                            android:id="@+id/customerMobileEditText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:inputType="number"
                            android:textSize="16dp"
                            android:hint=""
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/roundlayout_background_customeraddet"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >
                        <TextView
                            android:id="@+id/customerEmailTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#3e3d42"
                            android:textSize="16dp"
                            android:text="Email"
                            android:paddingLeft="10dp"
                            android:gravity="left|center_vertical"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.07" />
                        <EditText
                            android:id="@+id/customerEmailEditText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:textSize="16dp"
                            android:inputType="textEmailAddress"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/roundlayout_background_customeraddet"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >
                        <TextView
                            android:id="@+id/customerBirthdayTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#3e3d42"
                            android:textSize="16dp"
                            android:text="Birthday"
                            android:paddingLeft="10dp"
                            android:gravity="left|center_vertical"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.07" />
                        <TextView
                            android:id="@+id/customerBirthdaySearchTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:textSize="16dp"
                            android:textColor="#3c3d3a"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/roundlayout_background_customeraddet"/>
                    </LinearLayout>

                </LinearLayout>
                <!-- Left End -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:orientation="vertical"
                    android:padding="3dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" >
                </LinearLayout>

                <!-- Right Start -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:padding="3dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >

                        <TextView
                            android:id="@+id/customerCardNumTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#3e3d42"
                            android:textSize="16dp"
                            android:text="Membership Card #"
                            android:paddingLeft="10dp"
                            android:gravity="left|center_vertical"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.07" />
                        <EditText
                            android:id="@+id/customerCardNumEditText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:inputType="number"
                            android:textSize="16dp"
                            android:hint=""
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/roundlayout_background_customeraddet"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >
                        <TextView
                            android:id="@+id/customerAddr1TextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#3e3d42"
                            android:textSize="16dp"
                            android:text="Address"
                            android:paddingLeft="10dp"
                            android:gravity="left|center_vertical"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.07" />
                        <EditText
                            android:id="@+id/customerAddr1EditText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:textSize="16dp"
                            android:gravity="left|center_vertical"
                            android:background="@drawable/roundlayout_background_customeraddet"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >
                        <TextView
                            android:id="@+id/customerAddr2TextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="16dp"
                            android:text=""
                            android:paddingLeft="10dp"
                            android:gravity="left|center_vertical"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.07" />
                        <EditText
                            android:id="@+id/customerAddr2EditText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:textSize="16dp"
                            android:gravity="left|center_vertical"
                            android:background="@drawable/roundlayout_background_customeraddet"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >
                        <TextView
                            android:id="@+id/customerCityTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#3e3d42"
                            android:textSize="16dp"
                            android:text="City"
                            android:paddingLeft="10dp"
                            android:gravity="left|center_vertical"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.07" />
                        <EditText
                            android:id="@+id/customerCityEditText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:textSize="16dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/roundlayout_background_customeraddet"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >
                        <TextView
                            android:id="@+id/customerStateTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#3e3d42"
                            android:textSize="16dp"
                            android:text="State/Province"
                            android:paddingLeft="10dp"
                            android:gravity="left|center_vertical"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.07" />
                        <Spinner
                            android:id="@+id/customerStateSpinner"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:background="@drawable/spinner_customeradd"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >
                        <TextView
                            android:id="@+id/customerZipTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#3e3d42"
                            android:textSize="16dp"
                            android:text="Zip/Postal Code"
                            android:paddingLeft="10dp"
                            android:gravity="left|center_vertical"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.07" />
                        <EditText
                            android:id="@+id/customerZipEditText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:textSize="16dp"
                            android:inputType="number"
                            android:gravity="center_horizontal|center_vertical"
                            android:background="@drawable/roundlayout_background_customeraddet"/>
                    </LinearLayout>



                </LinearLayout>
                <!-- Right End -->



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:padding="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"/>

                <Button
                    android:id="@+id/customerAddSubmitButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_numberbutton_qty_v"
                    android:layout_marginRight="10dp"
                    android:text="V"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#83444D" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
