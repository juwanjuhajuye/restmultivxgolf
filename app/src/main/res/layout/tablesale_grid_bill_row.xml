<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/tablesale_grid_row_ln"
        android:background="@drawable/button_selector_tablesale_row"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="Table01 - A"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16dp"
            android:id="@+id/tablesale_grid_row_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Menu : 3"
            android:textColor="#000000"
            android:textSize="12dp"
            android:id="@+id/tablesale_grid_row_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:text="Amount : $ 36.53"
            android:textColor="#000000"
            android:textSize="12dp"
            android:id="@+id/tablesale_grid_row_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:text="PAID"
            android:textColor="#133dfd"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/tablesale_grid_row_paidyn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>