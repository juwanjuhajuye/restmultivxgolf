<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/giftCardBalanceCheckHistoryLn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:visibility="invisible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:background="#bbbbc8"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/giftCardHistoryTitleDateTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.4"
                android:text="Date"
                android:textSize="14dp"
                android:textColor="#a4a2a9"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text="|"
                android:textSize="14dp"
                android:textColor="#a4a2a9"
                android:gravity="center" />
            <TextView
                android:id="@+id/giftCardHistoryTitleAddedTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:text="Added"
                android:textSize="14dp"
                android:textColor="#a4a2a9"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text="|"
                android:textSize="14dp"
                android:textColor="#a4a2a9"
                android:gravity="center" />
            <TextView
                android:id="@+id/giftCardHistoryTitleUsedTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:text="Used"
                android:textSize="14dp"
                android:textColor="#a4a2a9"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:background="#bbbbc8"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical">
            <ListView
                android:id="@+id/giftCardHistoryListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" >
            </ListView>
            <WebView
                android:id="@+id/giftcardHistoryWv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:visibility="gone"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:background="#bbbbc8"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            android:orientation="horizontal"
            android:gravity="center_vertical|right" >

            <Button
                android:id="@+id/giftcardBalanceCheckHistoryBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_span="2"
                android:background="@drawable/ab_imagebutton_custmemo_back" />

            <Button
                android:id="@+id/giftCardBalanceCheck_suButtonX2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/ab_imagebutton_custmemo_close" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>