<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/salehistorylineLn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="74dp">

        <TextView
            android:id="@+id/salehistory_list_text5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:text="date"
            android:textSize="14dp"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:layout_weight="1.2" />

        <TextView
            android:id="@+id/salehistory_list_text_stcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:text="date"
            android:textSize="14dp"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:layout_weight="0.8" />



        <TextView
            android:id="@+id/salehistory_list_text3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="#000000"
            android:text="receipt num"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/salehistory_list_text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="pickup type"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/salehistory_list_table_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="table #"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/salehistory_list_text6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="customer"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_weight="1.5" />

        <TextView
            android:id="@+id/salehistory_list_text6_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="payment"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/salehistory_list_text6_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="4-digits"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/salehistory_list_text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="order num"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_weight="1.2" />

        <TextView
            android:id="@+id/salehistory_list_text_gratuity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="gratuity"
            android:textColor="#000000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/salehistory_list_text4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:text="$ 110.33"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/salehistory_list_text7_tip"
            android:gravity="right|center_vertical"
            android:textColor="#000000"
            android:text="$ 5.00"
            android:textSize="14dp"
            android:paddingRight="10dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/salehistory_list_text_alltotal"
            android:gravity="right|center_vertical"
            android:textColor="#000000"
            android:text="$ 5.00"
            android:textSize="14dp"
            android:paddingRight="10dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/salehistory_list_button_viewlog"

            android:layout_margin="5dp"
            android:background="@drawable/button_selector_salehistory_list_log"
            android:text="LOG"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView

            android:id="@+id/salehistory_list_button_tipadd"
            android:background="@drawable/button_selector_salehistory_list_tip"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="TIP"
            android:textSize="14dp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>