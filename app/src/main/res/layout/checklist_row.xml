<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <LinearLayout
        android:descendantFocusability="blocksDescendants"
        android:weightSum="13.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <CheckBox
            android:id="@+id/checklist_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/checklist_row_tablename"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="TABLE 01"
            android:textColor="#ffffff"
            android:textSize="16dp" />
        <TextView
            android:gravity="center"

            android:id="@+id/checklist_row_empname"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_weight="2.23"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center"

            android:id="@+id/checklist_row_time"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center|right"
            android:text="$0.00"
            android:id="@+id/checklist_row_price"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/checklist_row_master_print"
            android:background="@drawable/ab_roundlayout_category_item_bg1"
            android:text="Master"
            android:textColor="#a0a0a0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/checklist_row_kitchen_print"
            android:background="@drawable/ab_roundlayout_category_item_bg7"
            android:text="Kitchen"
            android:textColor="#de7676"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/checklist_row_view_log"
            android:background="@drawable/ab_roundlayout_category_item_bg2"
            android:text="View Log"
            android:textColor="#f8b452"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>