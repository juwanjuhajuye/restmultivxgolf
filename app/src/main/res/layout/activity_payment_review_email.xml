<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 이메일 발송 관련 레이아웃 -->
    <LinearLayout
        android:id="@+id/paymentReviewLn2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:text="Receipt - Email"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:background="#606060"
                android:paddingLeft="5dp"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <Button
                android:id="@+id/paymentReviewEmailButton1"
                android:tag="gmail.com"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ab_imagebutton_email_gmail"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginRight="5dp" />
            <Button
                android:id="@+id/paymentReviewEmailButton2"
                android:tag="yahoo.com"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ab_imagebutton_email_yahoo"
                android:layout_marginRight="5dp" />
            <Button
                android:id="@+id/paymentReviewEmailButton3"
                android:tag="live.com"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ab_imagebutton_email_hotmail"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginRight="5dp" />
            <Button
                android:id="@+id/paymentReviewEmailButton4"
                android:tag="icloud.com"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ab_imagebutton_email_icloud"
                android:gravity="center_horizontal|center_vertical" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginTop="5dp" >
            <Button
                android:id="@+id/paymentReviewEmailButton5"
                android:tag="inbox.com"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ab_imagebutton_email_inbox"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginRight="5dp" />
            <Button
                android:id="@+id/paymentReviewEmailButton6"
                android:tag="aol.com"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ab_imagebutton_email_aol"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginRight="5dp" />
            <Button
                android:id="@+id/paymentReviewEmailButton7"
                android:tag="outlook.com"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ab_imagebutton_email_outlook"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginRight="5dp" />
            <Button
                android:id="@+id/paymentReviewEmailButton8"
                android:tag=""
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ab_imagebutton_email_etc"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#ffffff" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#383a3f"
                android:text="Email Address"/>
            <EditText
                android:id="@+id/paymentReviewEditTextEmailAddr1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal"
                android:cursorVisible="true"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#383a3f"
                android:text="\@"/>
            <EditText
                android:id="@+id/paymentReviewEditTextEmailAddr2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical|left"
                android:cursorVisible="true"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2">
            <Button
                android:id="@+id/paymentReviewConfirmButton"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_selector_payment_review_send"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:text="V"
                android:textSize="25dp"
                android:layout_alignParentRight="true"
                android:textColor="#ffffff"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>