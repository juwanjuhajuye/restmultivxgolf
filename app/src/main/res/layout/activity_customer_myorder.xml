<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.example.jjbfather.jjjqsrt2go2gorestkakaovx.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 상단 고정 바 끝 -->

            <!-- 중앙 컨텐츠 시작 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="18"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:background="#fafafc"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/customer_myorder_full_image_ln"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:scaleType="center"
                            android:id="@+id/customer_myorder_full_image"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/customer_myorder_full_salon_name"
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/customer_myorder_ad_ln"
                        android:layout_weight="3.8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/customer_myorder_iv_imageview"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:visibility="gone"/>
                            <VideoView
                                android:id="@+id/customer_myorder_iv_videoview"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:visibility="visible"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <!-- 중앙/우측 컨텐츠 끝 -->
                <!-- 구분선색 -->

                <LinearLayout
                    android:id="@+id/customer_myorder_right_cart_ln"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#0e1127"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <!-- 중앙/좌측/상단 컨텐츠 끝 -->

                    <!-- 중앙/좌측/중앙 컨텐츠 시작 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3">
                            <ImageView
                                android:scaleType="center"
                                android:src="@drawable/aa_images_splashscreen"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="2GO2GO"
                                    android:textColor="#ffffff"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </RelativeLayout>

                        <View
                            android:background="#1e2545"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="7.7"
                            android:orientation="horizontal">
                            <View
                                android:background="#1e2545"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"/>

                            <ListView
                                android:id="@+id/mainCustomer_SaleCartList"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:cacheColorHint="#232531"
                                android:divider="#1e2545"
                                android:dividerHeight="1dp"
                                android:fadingEdge="none"></ListView>
                        </LinearLayout>


                        <LinearLayout
                            android:background="#1e2545"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2.5"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:layout_weight="2.5"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8"
                                    android:orientation="vertical">


                                    <TextView
                                        android:id="@+id/mainCommonGratuityTitleTextView"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="left|center_vertical"
                                        android:text="Gratuity"
                                        android:textColor="#abaeba"
                                        android:textSize="14dp" />

                                    <!-- 구분선색 -->
                                    <TextView
                                        android:id="@+id/mainSubTotalTitleTextView"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="left|center_vertical"
                                        android:text="Subtotal"
                                        android:textColor="#abaeba"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:id="@+id/mainTaxTitleTextView"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="left|center_vertical"
                                        android:text="Tax"
                                        android:textColor="#abaeba"
                                        android:textSize="14dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/mainCustomer_CommonGratuityValue"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="right|center_vertical"
                                        android:text="$0"
                                        android:textColor="#abaeba"
                                        android:textSize="14dp" />

                                    <!-- 구분선색 -->
                                    <TextView
                                        android:id="@+id/mainCustomer_SubTotalValue"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="right|center_vertical"
                                        android:text="$0"
                                        android:textColor="#abaeba"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:id="@+id/mainCustomer_TaxValue"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="right|center_vertical"
                                        android:text="$0"
                                        android:textColor="#abaeba"
                                        android:textSize="14dp" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/deliveryPickupFeeLn"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/addValueText"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:gravity="right|center_vertical"
                                        android:text="Delivery Fee "
                                        android:textColor="#d9dbe4"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:id="@+id/addValuePrice"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="right|center_vertical"
                                        android:text="$0"
                                        android:textColor="#d9dbe4"
                                        android:textSize="15dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/mainBillLn"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.8"
                                    android:paddingTop="5dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:textColor="#ffffff"
                                        android:textSize="20dp"
                                        android:textStyle="bold"
                                        android:text="Total"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"/>

                                    <TextView
                                        android:id="@+id/mainTotalValueForBill"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="right|center_vertical"
                                        android:text="$0"
                                        android:textColor="#ec4913"
                                        android:textSize="16dp"
                                        android:textStyle="bold"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/mainTotalValueForBillOf"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:text="of"
                                        android:textColor="#ffffff"
                                        android:textSize="16dp"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/mainCustomer_TotalValue"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="right|center_vertical"
                                        android:text="$0"
                                        android:textColor="#ffffff"
                                        android:textSize="20dp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <!-- 07.18.2022 - add pay for cash, card -->
                                <LinearLayout
                                    android:id="@+id/addpayincludedLn"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/addpayincludedTv"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="right|center_vertical"
                                        android:text=""
                                        android:textColor="#48ca2d"
                                        android:textSize="15dp" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <Button
                                android:visibility="gone"
                                android:id="@+id/customer_main_place_to_order"
                                android:background="@drawable/button_selector_customer_main_place_to_order"
                                android:textColor="#ffffff"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5"
                                android:text="PLACE TO ORDER" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.8"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/customer_main_cancel"
                                    android:background="@drawable/button_selector_customer_my_order"
                                    android:textColor="#ffffff"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="CALL" />

                                <Button
                                    android:id="@+id/customer_main_my_order"
                                    android:background="@drawable/button_selector_customer_main_cancel"
                                    android:textColor="#ffffff"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="ADD ORDER" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- 구분선색 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#abaeba"
                            android:orientation="horizontal"></LinearLayout>


                    </LinearLayout>
                    <!-- 중앙/좌측/중앙 컨텐츠 끝 -->

                    <!-- 중앙/좌측/하단 컨텐츠 시작 -->
                    <!-- 중앙/좌측/하단 컨텐츠 끝 -->

                </LinearLayout>
                <!-- 중앙/좌측 컨텐츠 끝 -->

            </LinearLayout>
            <!-- 중앙 컨텐츠 끝 -->


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>