<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/salehistory_list_text5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:text="date"
            android:textSize="14dp"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:layout_weight="1.2" />
        <TextView
            android:id="@+id/salehistory_list_item_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:text="date"
            android:textSize="14dp"
            android:textColor="#ff322d"
            android:paddingLeft="10dp"
            android:layout_weight="0.5" />

        <TextView
            android:id="@+id/salehistory_list_text_customer_arrive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|center_vertical"
            android:text="Arrive not confirm"
            android:textSize="14dp"
            android:textColor="#b90300"
            android:paddingLeft="10dp"
            android:layout_weight="0.5" />
        <TextView
            android:id="@+id/salehistory_list_onlineordertype"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="onlineordertype"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_weight="0.5" />
        <TextView
            android:id="@+id/salehistory_list_text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="order num"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/salehistory_list_text3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="#000000"
            android:text="receipt num" />

        <TextView
            android:id="@+id/salehistory_list_text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="pickup type"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/salehistory_list_text6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="customer"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_weight="1.5" />

        <TextView
            android:id="@+id/salehistory_list_text4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:text="$ 110.33"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>