<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/table_main_split_item_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">
        <ImageView
            android:visibility="gone"
            android:id="@+id/table_main_split_item_check_box"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ab_images_table_main_checkbox"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/table_main_split_item_check_box"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/table_main_split_item_name"
                android:gravity="center_vertical"
                android:text="Ice Cream"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_weight="4.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/table_main_split_item_qty"
                android:text="1"
                android:gravity="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/table_main_split_item_index"
                android:text="A"
                android:gravity="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="gone" />
            <TextView
                android:id="@+id/table_main_split_item_server"
                android:text=""
                android:gravity="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/optionTxtLn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:gravity="top|left">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2" />

        <TextView
            android:id="@+id/optionTxtTv"
            android:text="optionTxt"
            android:gravity="top|left"
            android:textColor="#606060"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4" />

    </LinearLayout>




</LinearLayout>