<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <LinearLayout
        android:id="@+id/settingsSystemResetLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:orientation="vertical"
        android:background="@drawable/roundlayout_black_noround">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="INITIALIZE DATA"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/roundlayout_systemreset_item">
                <CheckBox
                    android:id="@+id/systemreset_all"
                    android:tag="0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="20dp"
                    android:text="ALL DATA"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:background="@drawable/roundlayout_systemreset_item">
                <CheckBox
                    android:id="@+id/systemreset_sales"
                    android:tag="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="20dp"
                    android:text="SALES DATA"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:background="@drawable/roundlayout_systemreset_item">
                <CheckBox
                    android:id="@+id/systemreset_customer"
                    android:tag="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="20dp"
                    android:text="CUSTOMER INFORMATION"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:background="@drawable/roundlayout_systemreset_item">

                <CheckBox
                    android:id="@+id/systemreset_point"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="20dp"
                    android:tag="3"
                    android:text="POINT"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:background="@drawable/roundlayout_systemreset_item">
                <CheckBox
                    android:id="@+id/systemreset_menu"
                    android:tag="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="20dp"
                    android:text="MENU"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:background="@drawable/roundlayout_systemreset_item">
                <CheckBox
                    android:id="@+id/systemreset_product"
                    android:tag="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="20dp"
                    android:text="PRODUCT"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:background="@drawable/roundlayout_systemreset_item">
                <CheckBox
                    android:id="@+id/systemreset_giftcard"
                    android:tag="6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="20dp"
                    android:text="GIFT CARD"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:gravity="center" >
                <Switch
                    android:id="@+id/systemreset_cloud"
                    android:tag="systemreset_cloudTag"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    style="@style/SwitchCustom200"
                    android:switchTextAppearance="@style/SwitchTextAppearance"
                    android:textOn="WITH CLOUD DATA"
                    android:textOff="ONLY TABLET"
                    android:checked="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/systemreset_v"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/button_selector_numberbutton_qty_v"
                    android:layout_margin="3dp"
                    android:text="V"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#83444D"
                    android:layout_span="3"/>

                <Button
                    android:id="@+id/systemreset_close"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_numberbutton"
                    android:layout_margin="3dp"
                    android:text="CLOSE"
                    android:textSize="16dp"
                    android:textColor="#5b5b5b"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
