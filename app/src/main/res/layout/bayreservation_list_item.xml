<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="74dp">

    <LinearLayout
        android:id="@+id/bayreservationLineLn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="74dp">

        <TextView
            android:id="@+id/bayreservation_list_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:text="time"
            android:textSize="14dp"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/bayreservation_list_register_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:text="register time"
            android:textSize="14dp"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/bayreservation_list_bay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:text="bay"
            android:textSize="14dp"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/bayreservation_list_serviceitem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="Service Item"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/bayreservation_list_customer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="Customer"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/bayreservation_list_customer_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:text="customer #"
            android:textSize="14dp"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/bayreservation_list_phonenum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="Phone No."
            android:layout_gravity="center"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/bayreservation_list_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:text="Status"
            android:textSize="14dp"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

            <TextView
                android:id="@+id/bayreservation_list_button_delete"

                android:layout_margin="5dp"
                android:background="@drawable/button_selector_red"
                android:text="DEL"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/bayreservation_list_button_restore"

                android:visibility="gone"
                android:layout_margin="5dp"
                android:background="@drawable/button_selector_gray"
                android:text="Restore"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/bayreservation_list_button_get_reservation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_selector_bluebutton"
                android:gravity="center"
                android:padding="5dp"
                android:text="Get Reserv."
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>