<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/table_main_split_item_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/table_info_menu_list_itemname"
                android:gravity="center_vertical"
                android:text="Ice Cream"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/table_info_menu_list_itemqty"
                android:text="1"
                android:gravity="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/table_info_menu_list_itemindex"
                android:text="A"
                android:gravity="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/optionTxtLn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:gravity="top|left">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2" />

        <TextView
            android:id="@+id/optionTxtTv"
            android:text="optionTxt"
            android:gravity="top|left"
            android:textColor="#606060"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4" />

    </LinearLayout>




</LinearLayout>