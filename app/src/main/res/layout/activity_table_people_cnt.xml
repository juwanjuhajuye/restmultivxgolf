<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <LinearLayout
        android:id="@+id/qtyEditLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/roundlayout" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <TextView
                android:id="@+id/quantityTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="Customer Numbers"
                android:textColor="#3e3d42"
                android:textSize="22dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:paddingLeft="10dp"
                android:gravity="left|center_vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bbbbc8"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:paddingLeft="10dp"
                android:gravity="left|center_vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <EditText
                    android:id="@+id/qtyEdit_qty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="#f0f0f0"
                    android:gravity="center_horizontal|center_vertical"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >
                    <Button
                        android:id="@+id/qtyEdit_suButton7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_numberbutton_qty"
                        android:layout_margin="3dp"
                        android:text="7"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"/>
                    <Button
                        android:id="@+id/qtyEdit_suButton8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_numberbutton_qty"
                        android:layout_margin="3dp"
                        android:text="8"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"/>
                    <Button
                        android:id="@+id/qtyEdit_suButton9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_numberbutton_qty"
                        android:layout_margin="3dp"
                        android:text="9"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >
                    <Button
                        android:id="@+id/qtyEdit_suButton4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_numberbutton_qty"
                        android:layout_margin="3dp"
                        android:text="4"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"/>
                    <Button
                        android:id="@+id/qtyEdit_suButton5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_numberbutton_qty"
                        android:layout_margin="3dp"
                        android:text="5"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"/>
                    <Button
                        android:id="@+id/qtyEdit_suButton6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_numberbutton_qty"
                        android:layout_margin="3dp"
                        android:text="6"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >
                    <Button
                        android:id="@+id/qtyEdit_suButton1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_numberbutton_qty"
                        android:layout_margin="3dp"
                        android:text="1"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"/>
                    <Button
                        android:id="@+id/qtyEdit_suButton2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_numberbutton_qty"
                        android:layout_margin="3dp"
                        android:text="2"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"/>
                    <Button
                        android:id="@+id/qtyEdit_suButton3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_numberbutton_qty"
                        android:layout_margin="3dp"
                        android:text="3"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >
                    <Button
                        android:id="@+id/qtyEdit_suButton0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_numberbutton_qty"
                        android:layout_margin="3dp"
                        android:text="0"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"/>
                    <Button
                        android:id="@+id/qtyEdit_suButton00"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_numberbutton_qty"
                        android:layout_margin="3dp"
                        android:text="00"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"/>
                    <Button
                        android:id="@+id/qtyEdit_suButtonBack"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_numberbutton_qty"
                        android:layout_margin="3dp"
                        android:text="â†"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp">

                    <Button
                        android:id="@+id/qtyEdit_suButtonV"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_span="2"
                        android:layout_weight="2"
                        android:background="@drawable/button_selector_numberbutton_qty_v"
                        android:text="V"
                        android:textColor="#83444D"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/qtyEdit_suButtonX"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_selector_numberbutton"
                        android:layout_margin="3dp"
                        android:text="CLOSE"
                        android:textSize="16dp"
                        android:textColor="#5b5b5b"/>

                </TableRow>

            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>
</LinearLayout>