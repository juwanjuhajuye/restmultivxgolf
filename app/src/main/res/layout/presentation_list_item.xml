<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#F0F0F0"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/mainSaleCartListLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/mainSaleCartListCategoryColor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.07"
            android:gravity="center" />

        <TextView
            android:id="@+id/mainSaleCartListTaxExempt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center" />

        <TextView
            android:id="@+id/mainSaleCartListEmp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.03"
            android:gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/mainSaleCartListMenuName"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:layout_weight="2"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center">
            <TextView
                android:id="@+id/mainSaleCartListQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"

                android:gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/mainSaleCartListEach"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center" />

        <CheckBox
            android:id="@+id/mainSaleCartListCheckBox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainSaleCartListLinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:visibility="gone"
            android:id="@+id/mainSaleCartListCategoryColor2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.07"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.03"
            android:gravity="center"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/mainSaleCartListOptionAdditionalTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="5dp"
            android:gravity="left|center"
            android:textStyle="italic" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.47"
            android:gravity="center">
            <TextView
                android:id="@+id/modifieredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:text=" EDIT "
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:visibility="gone"
                android:background="@drawable/button_selector_calculator" />
        </LinearLayout>
        <TextView
            android:id="@+id/mainSaleCartListEach2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center" />
        <TextView
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainSaleCartListLinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">
        <TextView
            android:visibility="gone"
            android:id="@+id/mainSaleCartListCategoryColor3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.07"
            android:gravity="center" />
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:padding="5dp">
            <TextView
                android:id="@+id/specialrequestTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:text=" SPECIAL REQUEST "
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:background="@drawable/button_selector_calculator" />
        </LinearLayout>
        <TextView
            android:id="@+id/mainSaleCartListKitchenMemoTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.0"
            android:padding="5dp"
            android:gravity="center_vertical|left"/>


    </LinearLayout>
</LinearLayout>