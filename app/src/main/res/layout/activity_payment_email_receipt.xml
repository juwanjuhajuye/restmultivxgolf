<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/roundbackground_jjjsignpadbg">

        <LinearLayout
            android:id="@+id/emptyLn01"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/emptyLn02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="vertical">



                <LinearLayout
                    android:id="@+id/paymnetReviewLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/roundlayout_selectreceipt" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.6"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/discountExtraTitleEditText"
                                android:tag="discountExtraTitleEditTextTag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#3e3d42"
                                android:textSize="16dp"
                                android:text="Email Receipt"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp" >

                            <Button
                                android:id="@+id/paymnetReviewCloseBtn"
                                android:tag="paymnetReviewCloseBtnTag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ab_imagebutton_close_common2"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:orientation="horizontal"
                        android:background="#bbbbc8"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:orientation="horizontal"></LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="8.5"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <!-- 이메일 발송 관련 레이아웃 -->
                                    <LinearLayout
                                        android:id="@+id/paymentReviewLn2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:visibility="visible"
                                        android:orientation="vertical" >

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.5"
                                            android:orientation="horizontal"
                                            android:paddingLeft="20dp"
                                            android:paddingRight="20dp"
                                            android:paddingTop="0dp" >
                                            <Button
                                                android:id="@+id/paymentReviewEmailButton1"
                                                android:tag="gmail.com"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:background="@drawable/ab_imagebutton_email_gmail"
                                                android:gravity="center_horizontal|center_vertical"
                                                android:layout_marginRight="5dp" />

                                            <TextView
                                                android:layout_width="10dp"
                                                android:layout_height="match_parent" />

                                            <Button
                                                android:id="@+id/paymentReviewEmailButton2"
                                                android:tag="yahoo.com"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:background="@drawable/ab_imagebutton_email_yahoo"
                                                android:layout_marginRight="5dp" />

                                            <TextView
                                                android:layout_width="10dp"
                                                android:layout_height="match_parent" />

                                            <Button
                                                android:id="@+id/paymentReviewEmailButton3"
                                                android:tag="live.com"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:background="@drawable/ab_imagebutton_email_hotmail"
                                                android:gravity="center_horizontal|center_vertical"
                                                android:layout_marginRight="5dp" />

                                            <TextView
                                                android:layout_width="10dp"
                                                android:layout_height="match_parent" />

                                            <Button
                                                android:id="@+id/paymentReviewEmailButton4"
                                                android:tag="icloud.com"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:background="@drawable/ab_imagebutton_email_icloud"
                                                android:gravity="center_horizontal|center_vertical" />
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.5"
                                            android:orientation="horizontal"
                                            android:paddingLeft="20dp"
                                            android:paddingRight="20dp"
                                            android:paddingTop="10dp" >
                                            <Button
                                                android:id="@+id/paymentReviewEmailButton5"
                                                android:tag="inbox.com"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:background="@drawable/ab_imagebutton_email_inbox"
                                                android:gravity="center_horizontal|center_vertical"
                                                android:layout_marginRight="5dp" />

                                            <TextView
                                                android:layout_width="10dp"
                                                android:layout_height="match_parent" />

                                            <Button
                                                android:id="@+id/paymentReviewEmailButton6"
                                                android:tag="aol.com"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:background="@drawable/ab_imagebutton_email_aol"
                                                android:gravity="center_horizontal|center_vertical"
                                                android:layout_marginRight="5dp" />

                                            <TextView
                                                android:layout_width="10dp"
                                                android:layout_height="match_parent" />

                                            <Button
                                                android:id="@+id/paymentReviewEmailButton7"
                                                android:tag="outlook.com"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:background="@drawable/ab_imagebutton_email_outlook"
                                                android:gravity="center_horizontal|center_vertical"
                                                android:layout_marginRight="5dp" />

                                            <TextView
                                                android:layout_width="10dp"
                                                android:layout_height="match_parent" />

                                            <Button
                                                android:id="@+id/paymentReviewEmailButton8"
                                                android:tag=""
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:background="@drawable/ab_imagebutton_email_etc"
                                                android:gravity="center_horizontal|center_vertical"
                                                android:textColor="#ffffff" />
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.2"
                                            android:orientation="horizontal"
                                            android:paddingTop="20dp"
                                            android:paddingLeft="20dp"
                                            android:paddingRight="20dp" >

                                            <EditText
                                                android:id="@+id/paymentReviewEditTextEmailAddr1"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="3"
                                                android:gravity="center_vertical|center_horizontal"
                                                android:textSize="30dp"
                                                android:textColor="#3e3d42"
                                                android:hint="Your Email Address"
                                                android:cursorVisible="true"/>
                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="0.3"
                                                android:gravity="center"
                                                android:textStyle="bold"
                                                android:textSize="38dp"
                                                android:textColor="#3e3d42"
                                                android:text="\@"/>
                                            <EditText
                                                android:id="@+id/paymentReviewEditTextEmailAddr2"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1.5"
                                                android:gravity="center_vertical|left"
                                                android:textColor="#3e3d42"
                                                android:textSize="26dp"
                                                android:cursorVisible="true"/>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="0.3"
                                            android:orientation="horizontal"
                                            android:gravity="center">
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.2"
                                            android:paddingRight="20dp"
                                            android:gravity="center_vertical|right">
                                            <Button
                                                android:id="@+id/paymentReviewConfirmButton"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/ab_imagebutton_sendemail"
                                                android:text="V"
                                                android:textSize="25dp"
                                                android:layout_alignParentRight="true"
                                                android:textColor="#ffffff"/>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="0.3"
                                            android:orientation="horizontal"
                                            android:gravity="center">
                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>



                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:id="@+id/emptyLn03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/emptyLn04"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
