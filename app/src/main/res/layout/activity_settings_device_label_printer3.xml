<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <LinearLayout
        android:id="@+id/settingsSystemLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#462d37"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Label Printer 3"
                android:textSize="22dp"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/activityCloseBtn"
                android:tag="activityCloseBtnTag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/button_selector_white2"
                android:text=" X "/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/settingsSystemLn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Receipt Printer 관련 시작 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="@drawable/roundlayout_background_settings_sub"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.1"
                            android:orientation="horizontal"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp">

                                <TextView
                                    android:id="@+id/settingsDevicePrinterSubTitleTextView1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="left|center_vertical"
                                    android:text="Printer Name"
                                    android:textColor="#ffffff"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"></LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp">

                                <Spinner
                                    android:id="@+id/printernameSpinner"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:tag="printernameSpinnerTag" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.1"
                            android:orientation="horizontal"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp">

                                <TextView
                                    android:id="@+id/settingsDevicePrinterSubTitleTextView14"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="left|center_vertical"
                                    android:text="Test Print"
                                    android:textColor="#ffffff"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"></LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp">


                                <Button
                                    android:visibility="gone"
                                    android:layout_marginRight="20dp"
                                    android:id="@+id/connectPrintButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/button_selector_category7"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:text="Connect Printer"
                                    android:textColor="#ffffff"
                                    android:textSize="14dp" />

                                <!--                                <TextView-->
                                <!--                                    android:layout_width="wrap_content"-->
                                <!--                                    android:layout_height="match_parent"-->
                                <!--                                    android:gravity="center"-->
                                <!--                                    android:paddingLeft="5dp"-->
                                <!--                                    android:paddingRight="5dp"-->
                                <!--                                    android:text=" / "-->
                                <!--                                    android:textColor="#ffffff"-->
                                <!--                                    android:textSize="14dp"-->
                                <!--                                    android:textStyle="bold" />-->


                                <Button
                                    android:id="@+id/testPrintButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/button_selector_category6"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:text="TEST PRINT"
                                    android:textColor="#ffffff"
                                    android:textSize="14dp" />

                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.1"
                            android:orientation="horizontal"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="left|center_vertical"
                                    android:text="USB CONNECT"
                                    android:textColor="#ffffff"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"></LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:orientation="horizontal"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp">

                                <Switch
                                    android:id="@+id/label_printer_is_usb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="left|center_vertical"
                                    android:checked="true"
                                    android:textOff="Off"
                                    android:textOn="On"
                                    style="@style/SwitchCustom40"
                                    android:switchTextAppearance="@style/SwitchTextAppearance" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.1"
                            android:orientation="horizontal"></LinearLayout>

                        <LinearLayout
                            android:id="@+id/ipconnectln"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp">

                                <TextView
                                    android:id="@+id/settingsDevicePrinterSubTitleTextView13"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="left|center_vertical"
                                    android:text="Network IP"
                                    android:textColor="#ffffff"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"></LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:orientation="horizontal"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp">

                                <EditText
                                    android:id="@+id/networkIpTextView1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/roundlayout_background_settings_textview"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:padding="8dp"
                                    android:tag="networkIpTextView1Tag"
                                    android:text=""
                                    android:textColor="#3f3e3a"
                                    android:textSize="20dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.2"
                                    android:gravity="bottom|center_horizontal"
                                    android:text="."
                                    android:textColor="#ffffff"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/networkIpTextView2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/roundlayout_background_settings_textview"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:padding="8dp"
                                    android:tag="networkIpTextView2Tag"
                                    android:text=""
                                    android:textColor="#3f3e3a"
                                    android:textSize="20dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.2"
                                    android:gravity="bottom|center_horizontal"
                                    android:text="."
                                    android:textColor="#ffffff"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/networkIpTextView3"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/roundlayout_background_settings_textview"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:padding="8dp"
                                    android:tag="networkIpTextView3Tag"
                                    android:text=""
                                    android:textColor="#3f3e3a"
                                    android:textSize="20dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.2"
                                    android:gravity="bottom|center_horizontal"
                                    android:text="."
                                    android:textColor="#ffffff"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/networkIpTextView4"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/roundlayout_background_settings_textview"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:padding="8dp"
                                    android:tag="networkIpTextView4Tag"
                                    android:text=""
                                    android:textColor="#3f3e3a"
                                    android:textSize="20dp" />

                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/networkPrinterPortColon"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.2"
                                    android:gravity="center"
                                    android:text=":"
                                    android:textColor="#ffffff"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:visibility="gone"
                                    android:id="@+id/networkPrinterPortTextView"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5"
                                    android:background="@drawable/roundlayout_background_settings_textview"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:padding="8dp"
                                    android:tag="networkPrinterPortTextViewTag"
                                    android:text=""
                                    android:textColor="#3f3e3a"
                                    android:textSize="20dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.1"
                            android:orientation="horizontal">
                        </LinearLayout>

                    </LinearLayout>
                    <!-- Receipt Printer 관련 끝 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"></LinearLayout>


                    <!-- Device 관련 시작 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/roundlayout_background_settings_sub"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:orientation="horizontal"></LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.9"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/saveSettingsDevicePrinterButton"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/button_selector_settings_v"
                                    android:padding="10dp"
                                    android:tag="saveSettingsDevicePrinterButtonTag"
                                    android:text="V"
                                    android:textColor="#ffffff"
                                    android:textSize="30dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"
                                android:orientation="horizontal"></LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
